<div class="show-banner" style="background-image: url('<%= cl_image_path("rwv8cocze07ltk2eztx6") %>')"></div>
<div class="container show-container">
  <%= cl_image_tag @cocktail.photo.key, class: "show-page-image" %>
  <div class="cocktail-details">
    <div class="paper" style="background-image: url('<%= cl_image_path("ej7tod429pkvgoogkt8q") %>')">
      <h1><%= @cocktail.name %></h1>
      <div class="ingredients">
        <h3>Ingredients</h3>
        <% @doses.each do |dose| %>
          <p>
            <span class="ingredient"><%= dose.ingredient.name %></span>: <span class="description"><%= dose.description %></span>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-minus-circle"></i>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="new-dose">
      <h3>New Ingredient</h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-primary", value: "Add Ingredient" %>
      <% end %>
    </div>
  </div>
</div>
